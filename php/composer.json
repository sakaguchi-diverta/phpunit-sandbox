{
    "name": "sakaguchi-diverta/phpunit-sandbox",
    "type": "project",
    "license": "proprietary",
    "scripts": {
        "run:index": "php -f index.php",
        "test": "vendor/bin/phpunit -c tests/phpunit.xml",
        "test:debug": "vendor/bin/phpunit -c tests/phpunit.xml --debug"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App"
        },
        "files": [
            "src/Globals/loader.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    }
}
